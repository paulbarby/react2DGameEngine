{
  "compilerOptions": {
    "target": "ES2016", // Or a newer target like ES2020
    "module": "ESNext", // Use ES modules for browser compatibility
    "outDir": "./dist", // Output compiled JS to a 'dist' folder
    "rootDir": "./src", // Source files are in 'src'
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node", // Or "bundler" if using newer TS/Node versions
    "lib": ["dom", "es2016", "es2020"] // Added "es2020"
  },
  "include": ["src/**/*"], // Compile files in the src directory
  "exclude": ["node_modules", "dist"] // Ensure this excludes output and dependencies
}